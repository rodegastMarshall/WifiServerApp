<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Location Data Update Form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <EditText
        android:hint="Location GUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/edtGUID"/>
    <Button
        android:text="GET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:id="@+id/btnGetGuid"
        />
    <EditText
        android:hint="Your Location Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtLocation"/>
    <EditText
        android:hint="Your MAC Address Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMAC"/>
    <EditText
        android:hint="Your Max Signal Strength Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMaxSignalStrength"/>
    <EditText
        android:hint="Your Min Signal Strength Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMinSignalStrength"/>
    <Button
        android:text="Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/btnSend"/>

</LinearLayout>
